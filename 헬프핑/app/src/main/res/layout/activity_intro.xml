<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.project.mayihelpyou.SmothBackGroun
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ProgressBar
        android:id="@+id/partprogressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="326dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:progressBackgroundTint="#ffffff"
        android:progressTint="#FF6565"
        android:layout_marginBottom="12dp" />

    <TextView
        android:id="@+id/currenttextView"
        android:layout_width="227dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/partprogressBar"
        android:layout_alignStart="@+id/partprogressBar"
        android:text="    "
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/parttextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/partprogressBar"
        android:layout_alignEnd="@+id/partprogressBar"
        android:textColor="#ffffff"
        android:text="    " />

    <ProgressBar
        android:id="@+id/totalprogressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-8dp"
        android:progress="0"
        android:progressBackgroundTint="#ffffff"
        android:progressTint="#FF6565" />

    <TextView
        android:id="@+id/guidetextView"
        android:layout_width="329dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/currenttextView"
        android:layout_centerHorizontal="true"
        android:text="    "
        android:textColor="#ffffff" />

</RelativeLayout>